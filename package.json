{
  "name": "decky-frontend-lib",
  "version": "0.0.1",
  "description": "A library for building decky plugins",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "dev": "tsc -b -w",
